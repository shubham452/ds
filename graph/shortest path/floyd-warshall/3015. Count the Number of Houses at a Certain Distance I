3015. Count the Number of Houses at a Certain Distance I
https://leetcode.com/problems/count-the-number-of-houses-at-a-certain-distance-i/solutions/7054440/floyd-warshall-easy-by-shubham_sk70-w295/

class Solution {
public:
    vector<int> countOfPairs(int n, int x, int y) 
    {
        int i;
        vector<vector<int>> adj(n+1,vector<int>(n+1,1e9));
        for(i=1;i<n;i++)
        {
            adj[i][i]=0;
        }
        for(i=1;i<n;i++)
        {
            adj[i][i+1]=1;
            adj[i+1][i]=1;
        }   
        adj[x][y]=1;
        adj[y][x]=1;
        for(int via=1;via<=n;via++)
        {
            for(i=1;i<=n;i++)
            {
                for(int j=1;j<=n;j++)
                {
                    adj[i][j]=min(adj[i][j],adj[i][via]+adj[via][j]);
                    //adj[i][via]+adj[via][j] this is for infinity if there is a possibility of path which is not infinity
                }
            }
        }
        vector<int> ans(n,0);
        for(i=1;i<=n;i++)
        {
            for(int j=1;j<=n;j++)
            {
                if(adj[i][j]!=1e9 && adj[i][j]>0 && i!=j)
                {
                    ans[adj[i][j]-1]++;
                }
            }
        }
        return ans;
    }
};
